<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TabHost
        android:id="@+id/mapselecttabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/mapselectfloortab_1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="" >
                </TextView>

                <TextView
                    android:id="@+id/mapselectfloortab_2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="" >
                </TextView>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mapselecttv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme :"
            android:textSize="48px" >
        </TextView>

        <Spinner
            android:id="@+id/theme_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:prompt="@string/theme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mapselecttv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mob frequence :"
            android:textSize="48px" >
        </TextView>

        <Spinner
            android:id="@+id/frequency_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:prompt="@string/frequence" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mapselecttv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mob Limit :"
            android:textSize="48px" >
        </TextView>

        <Spinner
            android:id="@+id/mob_limit_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:prompt="@string/limit" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mapselecttv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boss:"
            android:textSize="48px" >
        </TextView>

        <Spinner
            android:id="@+id/mapbossspinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"

             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/mobsbutton1"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />

        <ImageButton
            android:id="@+id/mobsbutton2"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />

        <ImageButton
            android:id="@+id/mobsbutton3"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />

        <ImageButton
            android:id="@+id/mobsbutton4"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mapselectinfotv1"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="Mob Frequent"
            android:textSize="28px" >
        </TextView>

        <TextView
            android:id="@+id/mapselectinfotv2"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="Mob Rare"
            android:textSize="28px" >
        </TextView>

        <TextView
            android:id="@+id/mapselectinfotv3"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="Mob Default"
            android:textSize="28px" >
        </TextView>

        <TextView
            android:id="@+id/mapselectinfotv4"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="Mob Common"
            android:textSize="28px" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enchantable_subbase_layout"
        android:orientation="horizontal" >
        
        
	<ListView
	    android:id="@+id/enchantable_list_downview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	
        
    </LinearLayout>

</LinearLayout>